                        Title="" Grid.Row="1"
                        PrimaryButtonText="Approve"
                        SecondaryButtonText="Reject" IsPrimaryButtonEnabled="True" IsSecondaryButtonEnabled="True"
                       RequestedTheme="Dark" VerticalAlignment="Center"  HorizontalAlignment="Stretch">
